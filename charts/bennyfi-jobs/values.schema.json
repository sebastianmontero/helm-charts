{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "properties": {
    "nameOverride": {
      "description": "If specified replaces chart name when creating full name used for the names of all components",
      "type": "string"
    },
    "fullnameOverride": {
      "description": "If specified its value is used for the names of all components",
      "type": "string"
    },
    "env": {
      "description": "Environment variables",
      "properties": {
        "eosEndpoints": {
          "type" :"array",
          "items": {
            "type": "string",
            "pattern": "^(http(s)?:\\/\\/)[\\w.-]+(?:\\.[\\w\\.-]+)+[\\w\\-\\._~:/?#[\\]@!\\$&'\\(\\)\\*\\+,;=.]+$"
          },
          "minItems": 1
        },
        "contracts": {
          "type" :"array",
          "items": {
            "type": "object",
            "properties": {
              "contractName": {
                "type": "string",
                "pattern": "^[a-z1-5\\.]{1,12}$"
              },
              "privateKey": {
                "type": "string",
                "pattern": "^[a-zA-Z0-9]+$"
              },
              "runIntervalMins": {
                "type": "integer",
                "minimum": 1
              },
              "batchActions": {
                "type" :"array",
                "items": {
                  "type": "object",
                  "properties": {
                    "action": {
                      "type": "string",
                      "pattern": "^[a-z1-5\\.]{1,12}$"
                    },
                    "callOnce": {
                      "type": "boolean"
                    }   
                  },
                  "required": [
                    "action",
                    "callOnce"
                  ]
                },
                "minItems": 1
              }
            },
            "required": [
              "runIntervalMins",
              "privateKey",
              "batchActions"
            ]
          },
          "minItems": 1
        }
      },
      "required": [
        "eosEndpoints",
        "contracts"
      ],
      "type": "object"
    },
    "image": {
      "description": "Image Details",
      "properties": {
        "repository": {
          "type": "string",
          "pattern": "^[a-z0-9-_/]+$"
        },
        "pullPolicy": {
          "type": "string",
          "pattern": "^(Always|Never|IfNotPresent)$"
        },
        "tag": {
          "type": "string",
          "pattern": "^[a-z0-9-_\\.]+$"
        }
      },
      "required": [
        "repository",
        "pullPolicy",
        "tag"
      ],
      "type": "object"
    }
  },
  "title": "Values",
  "type": "object"
}